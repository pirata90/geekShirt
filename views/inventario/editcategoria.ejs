<div class="container main-container headerOffset">
  <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <a href="/">Home</a> </li>
        <li> <a href="/user/account">Mi cuenta</a> </li>
        <li> <a href="/inventario/">Inventario</a> </li>
        <li> <a href="/inventario/Categoria/">Categoria</a> </li>
        <li class="active">Editar Categoria</li>
      </ul>
    </div>
  <div class="row innerPage">
    <div class="col-lg-4 col-md-4 col-sm-4">
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3">
      <div class="row userInfo">
        <form action="/inventario/updatecategoria/<%= categoria.id %>" method="POST" id="form-marca" role="form" >
           <h2 class="form-signin-heading">Editar categoria</h2>
            <% if(flash && flash.err) { %>
                <ul class="alert alert-success">
                 <% Object.keys(flash.err).forEach(function(error) { %>
                 <li><%- JSON.stringify(flash.err[error]) %></li>
               <% }) %>
                </ul>
             <% } %>
            <div class="form-group reg-username">
              <div >
                <input name="nombre" value="<%= categoria.name %>" class="form-control input" size="20" placeholder="Categoria" type="text">
              </div>
            </div>
            <div >
              <div >
                <input name="submit" class="btn  btn-block btn-lg btn-primary" value="Guardar categoria" type="submit">
                <input type="hidden" name="_csrf" value="<%= _csrf %>" />
              </div>
            </div>
            <!--userForm--> 
        </form>
      </div>  <!--/row end-->
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4">
    </div>
  </div> <!--/.innerPage-->
  <div style="clear:both">  </div>
</div><!-- /.main-container -->

<div class="gap"> </div>

<script type="text/javascript" src="/script/jquery/jquery-1.10.1.min.js"></script>
<script type="text/javascript" src="/script/validate/jquery.validate.min.js"></script> 
<script type="text/javascript" src="/script/validate/marca.js"></script>  

