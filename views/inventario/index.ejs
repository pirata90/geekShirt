<div class="container main-container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <a href="/">Home</a> </li>
        <li> <a href="/user/account">Mi cuenta</a> </li>
         <li class="active">Inventario</li>
      </ul>
    </div>
    <div class="highlight breadcrumbDiv col-lg-12"><pre><a href="/inventario/marca" class="btn btn-sm btn-fb">Marca</a> <a href="/inventario/categoria" class="btn btn-sm btn-tw">Categoria</a> <a href="/inventario/nuevoarticulo" class="btn btn-sm btn-danger">Inventario</a></pre></div>
  </div>
  <div class="row innerPage">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="row userInfo">
      	<div class="panel panel-default">
  <!-- Default panel contents -->
			  <div class="panel-heading"><h2>Administracion de articulos</h2></div>

			  <!-- Table -->
			  <table class="table table-hover">
			    <tr>
						<th>ID</th>
						<th>Nombre</th>
						<th>Cantidad</th>
						<th>Precio</th>
						<th>Marca</th>
						<th>Categoria</th>
						<th></th>
						<th></th>
				</tr>
					<% _.each(articulos, function(articulo) { %>
					<tr data-id="<%= articulo.id %>" data-model="user">
						<td><%= articulo.id %></td>
						<td><%= articulo.name %></td>
						<td><%= articulo.cantidad %></td>
						<td><%= articulo.precio %></td>
						<% _.each(brands, function(brand) { %>
						  <% if (brand.id == articulo.marca) { %>
						      <td><%= brand.name %></td>
						   <% } %> 
		                 <% }) %>   
						<% _.each(categorias, function(categoria) { %>
				            <% if (categoria.id == articulo.categoria) { %>
								 <td><%= categoria.name %></td>
							 <% } %> 
            			 <% }) %>
						
						<td><a href="/inventario/editarticulo/<%= articulo.id %>" class="btn btn-sm btn-warning">Editar</a></td>
						 <% if (articulo.fileName != null) { %>
                           <td><a href="/inventario/file/<%= articulo.id %>" class="btn btn-sm btn-success">Imagen</a></td>
                        <% } else { %>
                          <td><a href="/inventario/file/<%= articulo.id %>" class="btn btn-sm btn-default">Imagen</a></td>
					     <% } %> 
			        <% }) %>				
			  </table>
			</div>
      </div>  <!--/row end-->
    </div>
  </div> <!--/.innerPage-->
  <div style="clear:both">  </div>
</div><!-- /.main-container -->

<div class="gap"> </div>

