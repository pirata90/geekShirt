
 <div class="container main-container headerOffset">
   <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <a href="/">Home</a> </li>
        <li> <a href="/user/account">Mi cuenta</a> </li>
        <li> <a href="/inventario/">Inventario</a> </li>
         <li class="active">Nuevo articulo</li>
      </ul>
    </div>
  <div class="row innerPage">
   
    <div class="col-lg-9 col-md-9 col-sm-7">
      <h1 class="section-title-inner"><span><i class="glyphicon glyphicon-user"></i> Nuevo articulo </span></h1>
      <div class="row userInfo">
        <div class="col-lg-12">
          <p class="required"><sup>*</sup> Campo requerido</p>
        </div>
        <form action="/inventario/creararticulo/" method="POST" role="form">
          <div class="col-xs-12 col-sm-6">
            <div class="form-group required">
              <label for="InputName">Nombre articulo<sup>*</sup> </label>
              <input required  type="text" class="form-control" id="Nombre" name="nombre" placeholder="Nombre">
            </div>
            <div class="form-group required">
              <label for="InputLastName">Cantidad<sup>*</sup> </label>
              <input required type="text" class="form-control" id="Cantidad"  name="cantidad" placeholder="Cantidad">
            </div>
           <div class="form-group required">
              <label for="InputLastName">Precio<sup>*</sup> </label>
              <input required type="text" class="form-control" id="Precio"  name="precio" placeholder="Precio">
            </div>
          </div>
          <div class="col-xs-12 col-sm-6">
            <div class="form-group required">
               <label for="InputLastName">Marca</label>
               <select class="form-control" id="marca" name="marca">            
              <% _.each(brands, function(brand) { %>
                 <option value="<%= brand.id %>"><%= brand.name %>&nbsp;&nbsp;</option>
                <% }) %>   
              </select>
            </div>
            <div class="form-group required">
              <label for="InputLastName">Categoria</label>
               <select class="form-control" id="categoria" name="categoria">
                 <% _.each(categorias, function(categoria) { %>
            <option value="<%= categoria.id %>"><%= categoria.name %>&nbsp;&nbsp;</option>
             <% }) %>
              </select>
            </div>
          </div>
          <div class="col-lg-12">
            <button type="submit" class="btn   btn-primary"><i class="fa fa-save"></i> &nbsp; Guardar </button>
             <input type="hidden" name="_csrf" value="<%= _csrf %>" />
          </div>
        </form>
        <div class="col-lg-12 clearfix">
          <ul class="pager">
                <li class="next pull-left"><a href="/inventario/"> &larr; Regresar</a></li>
          </ul>
        </div>
      </div>
      <!--/row end--> 
      
    </div>
    <div class="col-lg-3 col-md-3 col-sm-5"> </div>
  </div>
  </div>
  <!--/row-->
    
  </div> <!--/.innerPage-->
  <div style="clear:both">  </div>
</div><!-- /.main-container -->

<div class="gap"> </div>


<script type="text/javascript" src="/js/jquery/jquery-1.10.1.min.js"></script> 
<script src="/bootstrap/js/bootstrap.min.js"></script> 
