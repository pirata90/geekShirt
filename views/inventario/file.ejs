<script type="text/javascript">
$('#uploadForm').submit(function() {
    if ($.trim($("#uploadfile").val()) === "") {
        alert('Seleccione una imagen');
        return false;
    }
});

$(document).ready(
    function(){
        $('input:file').change(
            function(){
                if ($(this).val()) {
                    $('input:submit').attr('disabled',false);
                } 
            }
            );
    });
</script> 

