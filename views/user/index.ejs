<div class="container main-container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <a href="/">Home</a> </li>
        <li> <a href="/user/account">Mi cuenta</a> </li>
         <li class="active">Lista usuarios</li>
      </ul>
    </div>
  </div>
  <div class="row innerPage">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="row userInfo">
      	<div class="panel panel-default">
  <!-- Default panel contents -->
			  <div class="panel-heading"><h2>Administracion de usuarios</h2></div>

			  <!-- Table -->
			  <table class="table table-hover">
			    <tr>
						<th>ID</th>
						<th>Nombre</th>
						<th>Email</th>
						<th>Tipo</th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
					
					<% _.each(users, function(user) { %>
					<tr data-id="<%= user.id %>" data-model="user">
						<td><%= user.id %></td>
						<td><%= user.name %> <%= user.lastName %></td>
						<td><%= user.email %></td>
						<% if (user.admin == true) { %>
						 <td><span class="glyphicon glyphicon glyphicon-ok" aria-hidden="true"></span></td>
						 <% } %>
						<% if (user.admin == false) { %>
						 <td><span class="glyphicon glyphicon glyphicon-remove" aria-hidden="true"></span></td>
						 <% } %> 
						<td><a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">Mostrar</a></td>
						<td><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Editar</a></td>
						<td><a href="/user/editpass/<%= user.id %>" class="btn btn-sm btn-fb">Pass</a></td>

					<% }) %>
			  </table>
			</div>
      </div>  <!--/row end-->
    </div>
  </div> <!--/.innerPage-->
  <div style="clear:both">  </div>
</div><!-- /.main-container -->

<div class="gap"> </div>




