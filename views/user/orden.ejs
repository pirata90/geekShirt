<div class="container main-container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <a href="/">Home</a> </li>
        <li> <a href="/user/account">Mi cuenta</a> </li>
        <li class="active">Lista de ordenes</li>
      </ul>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-9 col-md-9 col-sm-7">
      <h1 class="section-title-inner"><span><i class="fa fa-list-alt"></i> Lista de ordenes </span></h1>
      <div class="row userInfo">
        <div class="col-xs-12 col-sm-12">
          <table class="footable">
            <thead>
              <tr>
                <th data-class="expand" data-sort-initial="true"> <span title="table sorted by this column on load">ID</span> </th>
                <th data-hide="default"> Precio </th>
                <th data-hide="default" data-type="numeric"> Fecha </th>
                <th data-hide="phone" data-type="numeric"> Estado </th>
              </tr>
            </thead>
            <tbody>
              <% _.each(estados, function(estado) { %>
              <tr>
                <td>#<%= estado.id %></td>
                <td>&#8353;<%= estado.totalFactura %></td>
                <td data-value="78025368997"><%= moment(estado.updatedAt).format('DD MM YYYY') %></td>
                <td data-value="3"><span class="label label-success">Finalizada</span></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        
        <div class="col-lg-12 clearfix">
          <ul class="pager">
            <% if (session.authenticated && session.User.admin) { %>
                <li class="previous pull-right"><a href="/"> <i class="fa fa-home"></i> Ir a la tienda</a></li>
                <li class="next pull-left"><a href="/user/account"> &larr; Regresar</a></li>
            <% } else { %>
                  <li class="next pull-left"><a href="/user/account"> &larr; Regresar</a></li>
                  <li class="previous pull-right"><a href="/"> <i class="fa fa-home"></i> Ir a la tienda</a></li>
            <% } %> 
          </ul>
        </div>
      </div>
      <!--/row end--> 
      
    </div>
    <div class="col-lg-3 col-md-3 col-sm-5"> </div>
  </div>
  <!--/row-->
  
  <div style="clear:both"></div>
</div>
<!-- /main-container -->

<div class="gap"> </div>

