<div class="container main-container headerOffset">
  <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <li> <a href="/">Home</a> </li>
        <li> <a href="/user/account">Mi cuenta</a> </li>
        <li> <a href="/user">Usuario</a> </li>
         <li class="active">Mostrar</li>
      </ul>
    </div>
  <div class="row innerPage">
  	<div class="col-lg-12 col-md-12 col-sm-12">
      <div class="panel panel-default">
		  <!-- Default panel contents -->
		  <div class="panel-heading">Panel heading</div>

		   <!-- Table -->
			  <table class="table table-hover">
			    <tr>
						<th>ID</th>
						<th>Nombre</th>
						<th>Email</th>
						<th></th>
					</tr>
					
					<tr data-id="<%= user.id %>" data-model="user">
						<td><%= user.id %></td>
						<td><%= user.name %> <%= user.lastName %></td>
						<td><%= user.email %></td>
						<% if (user.admin == true) { %>
						 <td><span class="glyphicon glyphicon glyphicon-ok" aria-hidden="true"></span></td>
						 <% } %>
						<% if (user.admin == false) { %>
						 <td><span class="glyphicon glyphicon glyphicon-remove" aria-hidden="true"></span></td>
						 <% } %> 
						 <td><%= user.years %>-<%= user.months %>-<%= user.days %></td>
						 <td><%= moment(user.createdAt).subtract(10, 'days').calendar() %></td>
						 <td><a class="btn btn-primary btn-sm" href="/user/edit/<%= user.id %>">Editar</a></td>
			  </table>
		</div>
  	</div>
  </div> <!--/.innerPage-->
  <div style="clear:both">  </div>
</div><!-- /.main-container -->


<div class="gap"> </div>

