<!-- /.Fixed navbar  --><div class="container main-container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
          <% if (session.authenticated) { %>
        <li> <a href="/">Home</a> </li>
        <li> <a href="/checkout/carro/<%= session.User.id %>">Carro</a> </li>
        <li> <a href="/checkout/billing/<%= session.User.id %>">Informacion</a> </li>
        <li> <a href="/checkout/envio/<%= session.User.id %>">Envio</a> </li>
        <li class="active">Pago</li>

      </ul>
    </div>
  </div>
  
  
  <div class="row">
    <div class="col-lg-9 col-md-9 col-sm-7">
      <h1 class="section-title-inner"><span><i class="glyphicon glyphicon-shopping-cart"></i> Facturacion</span></h1>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-5 rightSidebar">
      <h4 class="caps"><a href="/inventario/catalogo"><i class="fa fa-chevron-left"></i> Regresar a comprar </a></h4>
    </div>
  </div>
  
  
  <div class="row">
    <div class="col-lg-9 col-md-9 col-sm-12">
      <div class="row userInfo">
        <div class="col-xs-12 col-sm-12">
          <div class="w100 clearfix">
            <ul class="orderStep ">
              <li> <a> <i class="fa fa fa-envelope"></i> <span> Informacion </span></a></li>
              <li> <a><i class="fa fa-truck "> </i><span>Envio</span> </a> </li>
              <li class="active"> <a><i class="fa fa-money"> </i><span>Pago</span> </a> </li>
              <li> <a><i class="fa fa-check-square"> </i><span>Orden</span></a> </li>
            </ul>
            <!--orderStep--> 
          </div>

          <br>
          <form action="/checkout/orden/<%= session.User.id %>" method="POST" id="form-marca" role="form" >  
          <div class="panel open">
            <div class="creditCard">
              <div class="cartBottomInnerRight paymentCard"> 
              </div>
              <span>Tarjetas de</span> <span>credito soportadas</span>
              <div class="paymentInput">
                <label for="CardNumber">Numero de tarjeta *</label>
                <br>
                <img src="/images/tarjetas/visa.png" id="visa" class="card" style="display:none;"/>
                <img src="/images/tarjetas/master.png" id="master" class="card" style="display:none;"/>
                <img src="/images/tarjetas/discover.png" id="discover" class="card" style="display:none;"/>
                <img src="/images/tarjetas/american.png" id="american" class="card" style="display:none;"/>
                <img src="/images/tarjetas/jcb.png" id="jcb" class="card" style="display:none;"/>
                <img src="/images/tarjetas/dinner.png" id="dinner" class="card" style="display:none;"/>
                <input id="card_number" name="card_number" type="text" required>
              </div>
              <!--paymentInput-->
              <div class="paymentInput">
                <label for="CardNumber2">Nombre de la tarjeta *</label>
                <br>
                <input type="text" name="CardNumber2" id="CardNumber2" required>
              </div>
              <!--paymentInput-->
              <div class="paymentInput">
                <div class="form-group">
                  <label>Fecha de vencimiento *</label>
                  <br>
                  <div class="col-lg-4 col-md-4 col-sm-4 no-margin-left no-padding">
                    <select required aria-required="true" name="expire">
                      <option value="">Month</option>
                      <option value='1' selected>01</option>
                      <option value='2'>02</option>
                      <option value='3'>03</option>
                      <option value='4'>04</option>
                      <option value='5'>05</option>
                      <option value='6'>06</option>
                      <option value='7'>07</option>
                      <option value='8'>08</option>
                      <option value='9'>09</option>
                      <option value='10'>10</option>
                      <option value='11'>11</option>
                      <option value='12'>12</option>
                    </select>
                  </div>
                  <div class="col-lg-4 col-md-4 col-sm-4">
                    <select required aria-required="true" name="year">
                      <option value="">Year</option>
                      <option value="2014" selected>2014</option>
                      <option value="2015">2015</option>
                      <option value="2016">2016</option>
                      <option value="2017">2017</option>
                      <option value="2018">2018</option>
                      <option value="2019">2019</option>
                      <option value="2020">2020</option>
                      <option value="2021">2021</option>
                      <option value="2022">2022</option>
                      <option value="2023">2023</option>
                    </select>
                  </div>
                </div>
              </div>
              <!--paymentInput-->
              
              <div style="clear:both"></div>
              <div class="paymentInput clearfix">
                <label for="VerificationCode">Codigo de verificacion *</label>
                <br>
                <input type="text" id="VerificationCode" name="VerificationCode" style="width:90px;" required>
                <br>
              </div>
              <!--paymentInput-->

            </div>
            <!--creditCard-->
            
          </div>

          
          <div class="cartFooter w100">
            <div class="box-footer">
              <div class="pull-left"> <a class="btn btn-default" href="/checkout/envio/<%= session.User.id %>"> <i class="fa fa-arrow-left"></i> &nbsp; Envio </a> </div>
              <div class="pull-right">
               <button type="submit" class="btn btn-primary btn-small" title="Add to Cart" type="button">Orden</button>
             </div>
            </div>
          </div>
        </div>
           <input type="hidden" name="_csrf" value="<%= _csrf %>" />
          </form>
         <% } %>
        <!--/ cartFooter --> 
        
      </div>
    </div>
    <!--/row end-->
    
    <div class="col-lg-3 col-md-3 col-sm-12 rightSidebar">
      <div class="w100 cartMiniTable">
         <table id="cart-summary" class="std table">
          <tbody>
            <tr >
              <td>Total productos</td>
              <td class="price" >&#8353;<%= estado.totalSuma %></td>
            </tr>
            <tr  style="">
              <td>Envio</td>
              <% if (estado.envio == 0) { %>
              <td class="price" ><span class="success">Gratis!</span></td>
             <% } else { %>
              <td class="price" ><span class="success">&#8353;5000</span></td>
              <% } %>
            </tr>
            <tr class="cart-total-price ">
              <td>Impuesto</td>
              <td class="price" >13%</td>
            </tr>
            <tr >
              <td>Total impuesto</td>
              <td class="price" id="total-tax">&#8353;<%= estado.impuesto %></td>
            </tr>
            <tr >
              <td > Total </td>
              <td class=" site-color" id="total-price">&#8353;<%= estado.totalFactura %></td>
            </tr>
          </tbody>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
    <!--/rightSidebar--> 
    
  </div>
  <!--/row-->
  
  <div style="clear:both"></div>
</div>
