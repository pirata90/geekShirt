<!-- /.Fixed navbar  --><div class="container main-container headerOffset">
  <div class="row">
    <div class="breadcrumbDiv col-lg-12">
      <ul class="breadcrumb">
        <% if (session.authenticated) { %>
        <li> <a href="/">Home</a> </li>
        <li> <a href="/checkout/carro/<%= session.User.id %>">Carro</a> </li>
        <li> <a href="/checkout/billing/<%= session.User.id %>">Informacion</a> </li>
        <li class="active"> Envio </li>
      </ul>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-9 col-md-9 col-sm-7">
      <h1 class="section-title-inner"><span><i class="glyphicon glyphicon-shopping-cart"></i> Facturacion</span></h1>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-5 rightSidebar">
      <h4 class="caps"><a href="/inventario/catalogo"><i class="fa fa-chevron-left"></i> Regresar a comprar </a></h4>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-9 col-md-9 col-sm-12">
      <div class="row userInfo">
        <div class="col-xs-12 col-sm-12">
          <div class="w100 clearfix">
            <ul class="orderStep ">
              <li> <a> <i class="fa fa fa-envelope  "></i> <span> Informacion </span></a></li>
              <li class="active"> <a><i class="fa fa-truck "> </i><span>Envio</span> </a> </li>
              <li> <a><i class="fa fa-money  "> </i><span>Pago</span> </a> </li>
              <li> <a><i class="fa fa-check-square "> </i><span>Orden</span></a> </li>
            </ul>
            <!--/orderStep--> 
          </div>
          <div class="w100 clearfix">
            <div class="row userInfo">
              <div class="col-lg-12">
                <h2 class="block-title-2"> Seleccione su metodo de envio </h2>
              </div>
              <div class="col-xs-12 col-sm-12">
                <div class="w100 row">
                 <form action="/checkout/envioupdate/<%= session.User.id %>" method="POST" id="form-marca" role="form" >    
                  <div class="form-group col-lg-12 col-sm-12 col-md-12 -col-xs-12">
                    <table style="width:100%"  class="table-bordered table">
                      <tbody>
                        <tr >
                          <td ></td>
                          <td >Metodo</td>
                          <td >Informacion</td>
                          <td >Precio</td>
                        </tr>
                        <tr >
                          <td><label class="radio">
                              <input type="radio" name="radio" id="optionsRadios1" value="false" <% if (enviotipo.envio == false) { %>checked<% } %>>
                              <i class="fa  fa-truck fa-2x"></i> </label></td>
                          <td >Estandar</td>
                          <td >4 -5 dias</td>
                          <td >Gratis!</td>
                        </tr>
                        <tr >
                          <td ><label class="radio">
                              <input type="radio" name="radio" id="optionsRadios2" value="true" <% if (enviotipo.envio == true) { %>checked<% } %>>
                              <i class="fa fa-truck fa-2x"></i> </label></td>
                          <td >Premium</td>
                          <td >1-2 dias</td>
                          <td >&#8353;5000</td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
                
                <!--/row-->
                <div class="cartFooter w100">
                  <div class="box-footer">
                    <div class="pull-left"> <a class="btn btn-default" href="/checkout/billing/<%= session.User.id %>"> <i class="fa fa-arrow-left"></i> &nbsp; Informacion </a> </div>
                    <div class="pull-right"> 
                       <button type="submit" class="btn btn-primary btn-small" title="Add to Cart" type="button">Metodo de pago</button>
                    </div>
                     <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                  </form>
                  </div>
                </div>
                <% } %>
                <!--/ cartFooter --> 
                
              </div>
            </div>
          </div>
          <!--/row end--> 
          
        </div>
      </div>
    </div>
    <!--/row end-->
    
    <div class="col-lg-3 col-md-3 col-sm-12 rightSidebar">
      <div class="w100 cartMiniTable">
        <table id="cart-summary" class="std table">
          <tbody>
            <tr >
              <td>Total productos</td>
              <td class="price" >&#8353;<%= estado.totalSuma %></td>
            </tr>
            <tr  style="">
              <td>Envio</td>
              <% if (estado.envio == 0) { %>
              <td class="price" ><span class="success">Gratis!</span></td>
             <% } else { %>
              <td class="price" ><span class="success">&#8353;5000</span></td>
              <% } %>
            </tr>
            <tr class="cart-total-price ">
              <td>Impuesto</td>
              <td class="price" >13%</td>
            </tr>
            <tr >
              <td>Total impuesto</td>
              <td class="price" id="total-tax">&#8353;<%= estado.impuesto %></td>
            </tr>
            <tr >
              <td > Total </td>
              <td class=" site-color" id="total-price">&#8353;<%= estado.totalFactura %></td>
            </tr>
          </tbody>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
    <!--/rightSidebar--> 
    
  </div>
  <!--/row-->
  
  <div style="clear:both"></div>
  
</div>
<!-- /main-container -->


